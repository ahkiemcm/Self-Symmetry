<main class="user-edit">

    <h2>EDIT YOUR PROFILE</h2>

    <a href="/">Return to Home Page</a>

    <div id="edit-form" class="user-container-show">


        <form action="/user/{{user._id}}?_method=PUT" method="POST">
            <div>
                <label for="first_name">First Name: </label>
                <input type="text" name="first_name">
            </div>
            <div>
                <label for="last_name">Last Name: </label>
                <input type="text" name="last_name">
            </div>
            <div>
                <label for="age">Age: </label>
                <input type="number" name='age'>
            </div>
            <div>
                <label for="height">Height: </label>
                <input type="string" name="height">
            </div>
            <div>
                <label for="weight">Weight:</label>: </label>
                <input type="string" name="weight">
            </div>
            <div>
                <label for="goals">Goals:</label>: </label>
                <input type="text" name="goals">
            </div>

            <button type="submit">Save Changes To Profile</button>
        </form>

    </div>
</main>